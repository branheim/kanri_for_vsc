{
  "compilerOptions": {
    // Target ES2020 for modern JavaScript features while maintaining compatibility
    "target": "ES2020",
    // Use Node.js module resolution for VS Code extension environment
    "module": "commonjs",
    // Enable all strict type checking options for better code quality
    "strict": true,
    // Output directory for compiled JavaScript files
    "outDir": "out",
    // Root directory for TypeScript source files
    "rootDir": "src",
    // Enable source maps for debugging TypeScript in VS Code
    "sourceMap": true,
    // Module resolution strategy optimized for Node.js
    "moduleResolution": "node",
    // Enable importing JSON files as modules
    "resolveJsonModule": true,
    // Skip type checking of declaration files for faster compilation
    "skipLibCheck": true,
    // Ensure consistent casing in file names
    "forceConsistentCasingInFileNames": true,
    // Include type definitions for Node.js built-in modules
    "types": ["node"]
  },
  // Include all TypeScript files in the src directory
  "include": [
    "src/**/*"
  ],
  // Exclude common directories that don't need compilation
  "exclude": [
    "node_modules",
    "out",
    "**/*.test.ts"
  ]
}
