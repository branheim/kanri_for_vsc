{
  "name": "kanri-for-vscode",
  "displayName": "Kanri for VS Code",
  "description": "Visual Kanban boards for project management directly in VS Code. Create, manage, and organize tasks with drag-and-drop cards and customizable columns.",
  "version": "0.1.1",
  "publisher": "BrandonHeimbigner",
  "license": "MIT",
  "icon": "media/icon.png",
  "galleryBanner": {
    "color": "#1e1e1e",
    "theme": "dark"
  },
  "keywords": [
    "kanban",
    "project management", 
    "task management",
    "agile",
    "scrum",
    "productivity",
    "workflow",
    "board",
    "cards",
    "todo"
  ],
  "author": {
    "name": "Brandon Heimbigner",
    "email": "bheimbigner@icloud.com"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/bheimbigner/kanri-for-vscode.git"
  },
  "bugs": {
    "url": "https://github.com/bheimbigner/kanri-for-vscode/issues"
  },
  "homepage": "https://github.com/bheimbigner/kanri-for-vscode#readme",
  "engines": {
    "vscode": "^1.74.0"
  },
  "categories": [
    "Other",
    "Visualization"
  ],
  "activationEvents": [
    "onCommand:kanri.createBoard",
    "onCommand:kanri.openBoard"
  ],
  "main": "./out/extension.js",
  "contributes": {
    "views": {
      "kanri-explorer": [
        {
          "id": "kanri.boardsView",
          "name": "Kanban Boards",
          "when": "workspaceFolderCount != 0"
        }
      ]
    },
    "viewsContainers": {
      "activitybar": [
        {
          "id": "kanri-explorer",
          "title": "Kanri",
          "icon": "media/icon.svg"
        }
      ]
    },
    "commands": [
      {
        "command": "kanri.createBoard",
        "title": "Create New Board",
        "category": "Kanri",
        "icon": "$(add)"
      },
      {
        "command": "kanri.openBoard",
        "title": "Open Board",
        "category": "Kanri",
        "icon": "$(open-preview)"
      },
      {
        "command": "kanri.addCard",
        "title": "Add Card",
        "category": "Kanri",
        "icon": "$(note)"
      },
      {
        "command": "kanri.refreshBoards",
        "title": "Refresh Boards",
        "category": "Kanri",
        "icon": "$(refresh)"
      }
    ],
    "menus": {
      "view/title": [
        {
          "command": "kanri.createBoard",
          "when": "view == kanri.boardsView",
          "group": "navigation"
        },
        {
          "command": "kanri.refreshBoards",
          "when": "view == kanri.boardsView",
          "group": "navigation"
        }
      ],
      "view/item/context": [
        {
          "command": "kanri.openBoard",
          "when": "view == kanri.boardsView && viewItem == board",
          "group": "inline"
        }
      ]
    },
    "configuration": {
      "title": "Kanri",
      "properties": {
        "kanri.defaultColumns": {
          "type": "array",
          "items": {
            "type": "string"
          },
          "default": [
            "To Do",
            "In Progress",
            "Done"
          ],
          "description": "Default columns for new kanban boards"
        },
        "kanri.autoSave": {
          "type": "boolean",
          "default": true,
          "description": "Automatically save board changes"
        }
      }
    }
  },
  "scripts": {
    "compile": "tsc -p ./",
    "watch": "tsc -watch -p ./"
  },
  "devDependencies": {
    "@types/vscode": "^1.74.0",
    "@types/node": "16.x",
    "typescript": "^4.9.4"
  }
}
